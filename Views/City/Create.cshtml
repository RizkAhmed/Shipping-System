@model City
@{
    ViewData["Title"] = "Create";
    SelectList govItem = new SelectList(ViewBag.GovList, "Id", "Name");
}

<h1>Create</h1>

<form method="post" asp-action="Create">
    @Html.AntiForgeryToken()

    <div>
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ShippingCost"></label>
        <input class="form-control" asp-for="ShippingCost" />
        <span asp-validation-for="ShippingCost" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="PickUpCost"></label>
        <input class="form-control" asp-for="PickUpCost" />
        <span asp-validation-for="PickUpCost" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="GoverId">Governorate</label>

        <select class="form-control mb-3" asp-for="GoverId" asp-items="govItem">
            <option value="0">----- Select Governorate-------</option>

        </select>
    </div>
    <input type="submit" value="Create" class="btn btn-primary"   />
</form>
